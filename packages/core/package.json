{
  "name": "@siren/core",
  "version": "0.1.0",
  "description": "Environment-agnostic core library for Siren PMaC",
  "license": "GPL-3.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:silent": "tsc -b --pretty false",
    "test": "vitest run --reporter=dot --silent",
    "test:watch": "vitest",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16",
    "web-tree-sitter": "^0.26.3"
  }
}
