{
  "name": "siren-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Project Management as Code framework",
  "license": "GPL-3.0",
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --all --topological run build",
    "build:quiet": "yarn workspaces foreach --all --topological run build:quiet > /dev/null && echo 'Silent build successful!' || echo 'Silent build failed - run `yarn build` for full output'",
    "test": "yarn build:quiet && yarn workspaces foreach --all --topological run test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "yarn workspaces foreach -Apt run clean",
    "siren": "node apps/cli/dist/index.js",
    "cli:link": "cd apps/cli && npm link",
    "create-fixture": "bash scripts/create_project_fixture.sh",
    "create-golden": "bash scripts/create-golden.sh",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
