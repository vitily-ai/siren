{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noCommonJs": "error",
        "noDoneCallback": "error",
        "noExportedImports": "error",
        "noInferrableTypes": "error",
        "noNamespace": "error",
        "useAsConstAssertion": "error",
        "useForOf": "error"
      },
      "suspicious": {
        "noEvolvingTypes": "error",
        "noUnassignedVariables": "error"
      },
      "nursery": {
        "noUnnecessaryConditions": "error",
        "useFind": "error",
        "noUnusedExpressions": "error",
        "noEmptySource": "error"
      },
      "performance": {
        "noAwaitInLoops": "error",
        "noBarrelFile": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "files": {
    "includes": ["**", "!**/dist", "!**/node_modules", "!**/.yarn", "!**/grammar/src"]
  },
  "overrides": [
    {
      "includes": ["**/*.test.ts", "**/*.spec.ts", "**/test/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/core/**", "!packages/core/**/*.test.ts"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          },
          "suspicious": {
            "noConsole": "warn"
          }
        }
      }
    },
    {
      "includes": ["**/grammar/grammar.js"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedFunctionParameters": "off"
          },
          "style": {
            "noCommonJs": "off"
          }
        }
      }
    }
  ]
}
